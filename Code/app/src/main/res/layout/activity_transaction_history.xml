<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.htwds.mada.foodsharing.TransactionHistoryActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_green_light">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_history_title_tv"
            android:id="@+id/transaction_history_title_tv"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/published_offers_tv"
            android:id="@+id/textView17"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="136dp"
        android:baselineAligned="false">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView4" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transaction_own_offers_lv"
                android:paddingBottom="10dp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accepted_offers_tv"
            android:id="@+id/transaction_accepted_offers_tv"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.74">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transaction_accepted_offers_lv" />
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_edit_tv"
            android:id="@+id/transaction_edit_tv"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_close_tr_btn"
            android:id="@+id/transaction_close_tr_btn"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="transactionEdit"
            android:background="@color/blue06"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_cancel_btn"
            android:id="@+id/transaction_cancel_btn"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="transactionEdit"
            android:background="@color/blue06"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/transaction_back_btn"
            android:id="@+id/transaction_back"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="transactionEdit"
            android:background="@color/blue06"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>
